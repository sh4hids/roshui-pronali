---
import { HiHashtag } from 'react-icons/hi2/index';
import { type ItemWithCount } from '@/data/recipes';
import { convertToBanglaNumber, generateSlug } from '@/utils';

interface Props {
  tag: ItemWithCount;
}

const { tag } = Astro.props;
const [title, count] = tag;
---

<article
  class="rounded-3xl bg-pablo-50 overflow-hidden drop-shadow hover:drop-shadow-lg ease-in-out duration-300"
>
  <a class="flex flex-col p-6" href={`/tags/${generateSlug(title)}`}>
    <h3 class="font-normal text-center text-pablo-700 text-xl leading-8">
      <HiHashtag className="inline text-chilli-600" />
      <span class="relative top-1">
        {title}
      </span>
    </h3>
    <p class="text-center pt-4">
      {convertToBanglaNumber(count)}
      {' টি রেসিপি'}
    </p>
  </a>
</article>
