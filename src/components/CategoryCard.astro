---
import { generateSlug, categoryIcons } from '@/utils';
import CategoryIcon from './CategoryIcon.astro';

export interface Props {
  categoryName: string;
}

const { categoryName } = Astro.props as Props;
const slug = generateSlug(categoryName);
const icon = categoryIcons[slug as keyof typeof categoryIcons];
---

<a
  href={`/categories/${slug}`}
  class="inline-block w-full cursor-pointer text-pablo-700 hover:text-chilli-600 ease-in-out duration-100"
>
  <div
    class="rounded-full bg-pablo-50 w-full aspect-square p-8 mb-6 drop-shadow hover:drop-shadow-md ease-in-out duration-300"
  >
    <CategoryIcon class="category-icon" icon={icon} />
  </div>
  <h3 class="text-center font-normal text-xl">{categoryName}</h3>
</a>
