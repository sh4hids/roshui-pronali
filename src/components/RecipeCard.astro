---
import type { RecipeType } from '../content/config';

interface Props {
  recipe: RecipeType;
}

import { convertToBanglaNumber, generateSlug } from '../utils';

const image =
  'https://images.pexels.com/photos/718742/pexels-photo-718742.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2';
const { recipe } = Astro.props;
---

<article class="rounded-3xl bg-gray-100 overflow-hidden drop-shadow">
  <a href={`/recipes/${generateSlug(recipe.title)}`}>
    <div class="" aria-hidden="true">
      <img
        src={recipe.metaInfo.image || image}
        alt="food"
        class="h-44 w-full object-cover"
      />
    </div>
    <div class="p-4">
      <h2 class="font-bold text-primary-600 text-2xl leading-8 mb-2">
        {recipe.title}
      </h2>
      <p class="font-medium">
        প্রস্তুতি: {convertToBanglaNumber(recipe.time.preparation)} মি | রান্নাা:
        {convertToBanglaNumber(recipe.time.cooking)} মি
      </p>
    </div>
  </a>
</article>
