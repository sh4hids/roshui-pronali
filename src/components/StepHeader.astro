---
import { convertToBanglaNumber } from '@/utils';
interface Props {
  stepNumber: number;
}

const { stepNumber } = Astro.props;
---

<h3
  class="relative overflow-hidden w-full font-normal text-xl text-chilli-600 after:inline-block after:w-full after:absolute after:top-1/2 after:border-t after:border-chilli-600/10"
>
  <span class="pr-4">ধাপ {convertToBanglaNumber(stepNumber)}</span>
</h3>
