---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout meta={{ title }}>
  <article class="max-w-prose mx-auto pt-6 pb-16">
    <h2 class="text-2xl font-normal pb-4 sm:pb-6 lg:pb-8 text-chilli-600">
      {title}
    </h2>
    <slot />
  </article>
</BaseLayout>
