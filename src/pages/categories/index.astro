---
import { getAllRecipes, getUniqueCategoriesWithCount } from '../../data';
import RecipesByTypePageLayout from '@/layouts/RecipesByTypePageLayout.astro';
import Categories from '@/components/Categories.astro';
import { convertToBanglaNumber } from '@/utils';

const recipes = await getAllRecipes();
const categories = getUniqueCategoriesWithCount(recipes);
const meta = {
  title: 'রান্নার ধরন',
};
---

<RecipesByTypePageLayout title={meta.title} description={`মোট ${convertToBanglaNumber( categories.length)} ধরনের রেসিপি`}>
  <Categories categories={categories} />
</RecipesByTypePageLayout>
