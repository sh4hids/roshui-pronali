---
import RecipeGrid from '@/components/RecipeGrid.astro';
import { getAllRecipes, sortRecipeByDate } from '@/data';
import AllRecipesPageLayout from '@/layouts/AllRecipesPageLayout.astro';

const recipes = await getAllRecipes();
const sortedRecipes = sortRecipeByDate(recipes);

const meta = {
  title: 'সকল রেসিপি',
};
---

<AllRecipesPageLayout title={meta.title} description="test">
  <RecipeGrid recipes={sortedRecipes} />
</AllRecipesPageLayout>
