---
import { getAllRecipes, getUniqueTagsWithCount } from '@/data';
import Tags from '@/components/Tags.astro';
import RecipesByTypePageLayout from '@/layouts/RecipesByTypePageLayout.astro';
import { convertToBanglaNumber } from '@/utils/convertToBanglaNumber';

const recipes = await getAllRecipes();
const tags = getUniqueTagsWithCount(recipes);
const meta = {
  title: 'রান্নার বিষয়',
};
---

<RecipesByTypePageLayout title={meta.title} description={`মোট ${convertToBanglaNumber( tags.length)} বিষয়ের রেসিপি`}>
  <Tags tags={tags} />
</RecipesByTypePageLayout>
