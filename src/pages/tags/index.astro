---
import Tags from '@/components/Tags.astro';
import { getAllRecipes, getUniqueTagsWithCount } from '@/data';
import RecipesByTypePageLayout from '@/layouts/RecipesByTypePageLayout.astro';
import { convertToBanglaNumber } from '@/lib/utils';

const recipes = await getAllRecipes();
const tags = getUniqueTagsWithCount(recipes);
const sortedTags = tags.sort((a, b) => a[0].localeCompare(b[0]));
const meta = {
    title: 'রান্নার বিষয়',
};
---

<RecipesByTypePageLayout
    title={meta.title}
    description={`মোট ${convertToBanglaNumber(sortedTags.length)} বিষয়ের রেসিপি`}
>
    <Tags tags={sortedTags} />
</RecipesByTypePageLayout>
