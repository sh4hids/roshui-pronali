---
import { getAllRecipes, getUniqueTagsWithCount } from '@/data';
import AllRecipesPageLayout from '@/layouts/AllRecipesPageLayout.astro';
import Tags from '@/components/Tags.astro';

const recipes = await getAllRecipes();
const tags = getUniqueTagsWithCount(recipes);
const meta = {
  title: 'রান্নার বিষয়',
};
---

<AllRecipesPageLayout title={meta.title} description="test">
  <Tags tags={tags} />
</AllRecipesPageLayout>
